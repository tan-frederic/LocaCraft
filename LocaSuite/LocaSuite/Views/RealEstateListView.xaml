<UserControl x:Class="LocaSuite.Views.RealEstateListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LocaSuite.Views"
             xmlns:vm="clr-namespace:LocaSuite.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:RealEstateListViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Search Text Bar -->
        <TextBox x:Name="SearchBoxTextPlaceHolder"
         Grid.Row="0"
         Style="{StaticResource SearchBox}"
         Margin="20 0"/>

        <Label IsHitTestVisible="False"
                   Content="Search real estate..."
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource PlaceholderText}"
                   Visibility="{Binding Text.IsEmpty, ElementName=SearchBoxTextPlaceHolder, Converter={StaticResource BooleanVisibilityConverter}}"/>

        <TextBlock Grid.Row="1"
                   Foreground="{StaticResource PlaceholderText}"
                   Text="There is not real estate Data"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"/>

        <Button Grid.Row="2"
                x:Name="AddRealEstate"
                Height="50"
                Width="50"
                Margin="0 0 10 0"
                Command="{Binding OpenNewRealEstateWindowCommand}"
                HorizontalAlignment="Right"/>
    </Grid>
</UserControl>

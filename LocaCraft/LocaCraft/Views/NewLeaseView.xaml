<Window x:Class="LocaCraft.Views.NewLeaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocaCraft.Views"
        mc:Ignorable="d"
        Title="NewLeaseView"
        Height="850"
        Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!--#region Name Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Nom :"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"/>

            <TextBox x:Name="LeaseName"
                     Grid.Column="1"
                     Style="{StaticResource SearchBox}"
                     Text="{Binding Name, ValidatesOnDataErrors=True}"
                     Margin="20 0 0 0 "/>

            <Label IsHitTestVisible="False"
                   Content="Nom du bail"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0"
                   Foreground="{StaticResource PlaceholderText}"
                   Visibility="{Binding Text.IsEmpty, ElementName=LeaseName, Converter={StaticResource BooleanVisibilityConverter}}"/>
        </Grid>

        <!--#region Lease Info -->

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="Informations"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <!--#region Main Adress -->

            <!-- Main Adress Label -->
            <Label Grid.Row="1"
                   Content="Loyer :"
                   Margin="20 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

            <!-- Rent Textbox -->
            <TextBox x:Name="RealEstateRent"
                     Grid.Row="2"
                     Text="{Binding MonthlyRent, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Style="{StaticResource SearchBox}"
                     Margin="0 0" Cursor=""/>

            <!-- Monthly rent Placeholder -->
            <Label IsHitTestVisible="False"
                   Content="Loyer mensuelle"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Margin="20 0 0 5"
                   Foreground="{StaticResource PlaceholderText}"
                   Visibility="{Binding Text.IsEmpty, ElementName=RealEstateRent, Converter={StaticResource BooleanVisibilityConverter}}"/>
            <!--#endregion-->

            <!--#region Adress Complement -->
            <!-- Main Adress Label -->
            <Label Content="Charge :"
                   Grid.Row="3"
                   Margin="20 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

            <!-- Main Adress Textbox -->
            <TextBox x:Name="MonthlyExpenses"
                     Grid.Row="4"
                     Text="{Binding MonthlyExpenses}"
                     Style="{StaticResource SearchBox}"
                     Margin="0 0"/>

            <!-- Main Adress Text Placeholder -->
            <Label IsHitTestVisible="False"
                   Content="Charges"
                   Grid.Row="4"
                   VerticalAlignment="Center"
                   Margin="20 0 0 0"
                   Foreground="{StaticResource PlaceholderText}"
                   Visibility="{Binding Text.IsEmpty, ElementName=MonthlyExpenses, Converter={StaticResource BooleanVisibilityConverter}}"/>    

            <!--#endregion-->

            <!--#region Adress Complement -->
            <!-- Main Adress Label -->
            <Label Content="Dépôt de garantie :"
                   Grid.Row="5"
                   Margin="20 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>

            <!-- Main Adress Textbox -->
            <TextBox x:Name="Deposit"
                     Grid.Row="6"
                     Text="{Binding Deposit}"
                     Style="{StaticResource SearchBox}"
                     Margin="0 0"/>

            <!-- Main Adress Text Placeholder -->
            <Label IsHitTestVisible="False"
                   Content="Dépôt de garantie"
                   Grid.Row="6"
                   VerticalAlignment="Center"
                   Margin="20 0 0 0"
                   Foreground="{StaticResource PlaceholderText}"
                   Visibility="{Binding Text.IsEmpty, ElementName=Deposit, Converter={StaticResource BooleanVisibilityConverter}}"/>

            <!--#endregion-->

            <!--#region Lease date -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!--#region Lease Start -->

                <Grid Grid.Column="0" Margin="0 0 5 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Content="Date de début :"
                           Margin="20 0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <!-- Postal Code Textbox -->
                    <TextBox x:Name="LeaseDateStart"
                             Text="{Binding PostalCode, ValidatesOnDataErrors=True}"
                             Grid.Row="1"
                             Style="{StaticResource SearchBox}"
                             Margin="0 0"/>

                    <!-- Postal Code Text Placeholder -->
                    <Label IsHitTestVisible="False"
                           Content="Date de début du bail"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"
                           Foreground="{StaticResource PlaceholderText}"
                           Visibility="{Binding Text.IsEmpty, ElementName=LeaseDateStart, Converter={StaticResource BooleanVisibilityConverter}}"/>

                </Grid>

                <!--#endregion-->

                <!--#region Lease date end -->
                <Grid Grid.Column="1"  Margin="5 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Content="Date de fin :"
                           Margin="20 0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <!-- Lease date end Textbox -->
                    <TextBox x:Name="LeaseDateEnd"
                             Grid.Row="1"
                             Style="{StaticResource SearchBox}"
                             Text="{Binding City, ValidatesOnDataErrors=True}"
                             Margin="0 0"/>

                    <!-- Lease date end placeholder -->
                    <Label IsHitTestVisible="False"
                           Content="Date de fin du bail"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"
                           Foreground="{StaticResource PlaceholderText}"
                           Visibility="{Binding Text.IsEmpty, ElementName=LeaseDateEnd, Converter={StaticResource BooleanVisibilityConverter}}"/>

                </Grid>
                <!--#endregion-->

            </Grid>
            <!--#endregion-->
        </Grid>
        
        
    </Grid>
</Window>

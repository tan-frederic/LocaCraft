<UserControl x:Class="LocaSuite.Views.RealEstateCardItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LocaSuite.Views"
             xmlns:vm="clr-namespace:LocaSuite.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:RealEstateCardItemViewModel}"
             d:DesignHeight="175" d:DesignWidth="400">
    
    <Grid Background="#FFB9C7D4">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <Label Content="{Binding RealEstateAssetModel.Name}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="20"
                               FontWeight="Bold"/>
                        <Label Content="{Binding RealEstateAssetModel.Address}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CancelRealEstate"
                    Grid.Column="0"
                    Height="auto"
                    Margin="10 5 10 5"
                    Content="Supprimer"
                    Command="{Binding AskDeleteRealEstateCommand}"/>

            <Button x:Name="AddRealEstate"
                    Grid.Column="1"
                    Height="auto"
                    Margin="10 5 10 5"
                    Content="Details"
                    Command="{Binding OpenDetailRealEstateCommand}"/>
        </Grid>
    </Grid>
</UserControl>
